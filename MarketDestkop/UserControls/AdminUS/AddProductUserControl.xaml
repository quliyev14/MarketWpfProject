<UserControl x:Class="MarketWpfProject.UserControls.AdminUS.AddProductUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MarketWpfProject.UserControls.AdminUS"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <StackPanel Margin="10">
        <TextBlock Text="Add Product" FontSize="24" Margin="0,0,0,20"/>

        <TextBlock Text="Product Name:"/>
        <TextBox x:Name="ProductNameTextBox" Width="200" Margin="0,0,0,10"/>

        <TextBlock Text="Price:"/>
        <TextBox x:Name="PriceTextBox" Width="200" Margin="0,0,0,10"/>

        <TextBlock Text="Description:"/>
        <TextBox x:Name="DescriptionTextBox" Width="200" Height="100" Margin="0,0,0,10" TextWrapping="Wrap" AcceptsReturn="True"/>

        <Button Content="Add Product" Width="200" Height="40" />
    </StackPanel>
</UserControl>
