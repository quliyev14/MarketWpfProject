<Window x:Class="MarketWpfProject.Views.ChooseMainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MarketWpfProject.Views"
        mc:Ignorable="d"
        Title="ChooseMainWindow" Height="350" Width="400">
    <Grid>
        <StackPanel Margin="10" VerticalAlignment="Center" HorizontalAlignment="Center" Width="200">
            <Button Command="{Binding SuperAdminCommand}" Margin="10" Content="SuperAdmin" Width="180" Height="40"  Background="LightBlue" FontSize="16"/>
            <Button Command="{Binding AdminCommand}" Margin="10" Content="Admin" Width="180" Height="40"  Background="LightGreen" FontSize="16"/>
            <Button Command="{Binding UserCommand}" Margin="10" Content="User" Width="180" Height="40"  Background="LightCoral" FontSize="16"/>
        </StackPanel>
    </Grid>
</Window>