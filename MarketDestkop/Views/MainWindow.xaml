<Window x:Class="MarketWpfProject.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MarketWpfProject.Views"
        mc:Ignorable="d"
        Title="MainWindow" 
        Height="600" 
        Width="1000"
        ResizeMode="NoResize">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <StackPanel Grid.Column="0" VerticalAlignment="Top" Margin="10">
            <Button Content="Products" Command="{Binding ProductsCommand}" CommandParameter="Category1UserControl" Margin="5"/>
            <Button Content="My Basket" Command="{Binding MyBasketCommand}" CommandParameter="Category2UserControl" Margin="5"/>
            <Button Content="Sign Out" Command="{Binding SignOutCommand}" CommandParameter="Category2UserControl" Margin="5"/>
        </StackPanel>
        <Frame Name="ContentFrame" Grid.Column="1"/>
    </Grid>
</Window>
