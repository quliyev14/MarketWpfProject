<Window x:Class="MarketWpfProject.Views.UserView.PaymentWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MarketWpfProject.Views.UserView"
        mc:Ignorable="d"
        Title="Payment" 
        WindowStartupLocation="CenterOwner"
        Height="200" 
        Width="300"
        ResizeMode="NoResize"
        Background="White">

    <Grid>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
            <TextBlock Text="Select Payment Method" 
                       FontSize="16" 
                       FontWeight="Bold" 
                       HorizontalAlignment="Center" 
                       Margin="0,0,0,20"/>

            <!--<Button Content="Cash" 
                    Width="100" 
                    Height="40" 
                    Margin="10"
                    Command="{Binding CashPaymentCommand}" 
                    Style="{StaticResource MaterialDesignRaisedButton}"/>-->

            <Button Content="Card" 
                    Width="100" 
                    Height="40" 
                    Command="{Binding CardPaymentCommand}" 
                    Style="{StaticResource MaterialDesignRaisedButton}"/>
        </StackPanel>
    </Grid>
</Window>
